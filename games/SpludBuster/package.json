{
  "name": "spud-blaster",
  "version": "1.0.0",
  "description": "Un jeu de type Brotato avec Phaser.js et Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "game",
    "phaser",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "electron": "^28.0.0"
  },
  "build": {
    "appId": "com.spudblaster.game",
    "productName": "SpudBlaster",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.git",
      "!dist",
      "!node_modules"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "logo.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}